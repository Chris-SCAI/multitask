# Supabase (required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# OpenRouter API Key (required for AI features)
# Get your key at https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key

# Stripe (required for subscriptions)
# Get your keys at https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs (create in Stripe Dashboard → Products)
# Pro plan: 4,90€/month or 39€/year
STRIPE_PRICE_PRO_MONTHLY=price_xxx
STRIPE_PRICE_PRO_YEARLY=price_xxx
# Team plan (not yet available)
STRIPE_PRICE_TEAM=price_xxx
# Legacy (optional - fallback for STRIPE_PRICE_PRO_MONTHLY)
STRIPE_PRICE_PRO=price_xxx

# App URL (for Stripe redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Google Analytics (optional)
# Get your Measurement ID at https://analytics.google.com
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Monitoring (optional)
# Get your DSN at https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_ORG=your-org
SENTRY_PROJECT=multitasks
SENTRY_AUTH_TOKEN=sntrys_xxx

# Push Notifications (optional)
# Generate VAPID keys with: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
